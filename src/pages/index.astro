---
import Layout from '@layouts/Default.astro';
import RecentBlogPosts from '@components/generic/RecentBlogPosts.astro';
import MobileSocials from '@components/home/MobileSocials.astro';
import { Pill } from '@eliancodes/brutal-ui';
import { Button } from '@eliancodes/brutal-ui';
import { Card } from '@eliancodes/brutal-ui';

const builtWith = [
  { name: 'CCNA', url: 'https://learningnetwork.cisco.com/s/ccna' },
  { name: 'Cisco', url: 'https://mkto.cisco.com/rs/564-WHV-323/images/CCNA-Certification-Guide.pdf' },
  { name: 'networking', url: '' },
  { name: 'networking concepts', url: 'https://codered.eccouncil.org/course/fundamentals-of-networking-concepts-protocols-and-security' },
  { name: 'routing', url: '' },
  { name: 'switching', url: '' },
  { name: 'IP', url: '' },
  { name: 'addressing', url: '' },
  { name: 'security', url: 'https://codered.eccouncil.org/course/fundamentals-of-networking-concepts-protocols-and-security' },
];
---

<Layout
  title='Home'
  pageTitle='Brutal Theme |Â Home'
  description='Brutal is a minimalistic, neobrutalism theme for Astro.'
>
  <main class='bg-pink p-6'>
    <MobileSocials />
    <section id='about' class='grid md:grid-cols-8 gap-8 mt-4'>
      <h2 class='hidden'>About Brutal</h2>
      <div class='col-span-4'>
        <Card>
          <div class='flex flex-col justify-between items-start gap-4'>
            <p class='mt-4 outfit text-2xl md:text-5xl lg:text-7xl'>
              CCNA for <a
                class='text-white'
                target='_blank'
                href='https://astro.build/'>Networking</a
              >
            </p>
            <p class='mt-2 outfit text-xl md:text-3xl lg:text-5xl'>
              A distinguished, lab tested for Networking.
            </p>
            <Button target={'_self'} href='/blog/'>
              Check out the blog &rarr;
            </Button>
          </div>
        </Card>
      </div>
      <div class='col-span-2'>
        <Card>
          <h2 class='text-2xl md:text-4xl lg:text-6xl mb-8 dm-serif'>
            CCNA is built with
          </h2>
          <ul class='flex gap-4 flex-wrap'>
            {
              builtWith.map((item) => (
                <li>
                  <Pill>
                    <a
                      class='sanchez'
                      href={item.url}
                      target='_blank'
                      title={`Go to ${item.name}`}
                    >
                      {item.name}
                    </a>
                  </Pill>
                </li>
              ))
            }
          </ul>
        </Card>
      </div>
      <div class='col-span-2'>
        <Card>
          <h2 class='text-2xl md:text-4xl lg:text-6xl mb-4 dm-serif'>
            What Does CCNA Cover?
          </h2>
          <p class='poppins'>
            CCNA covers network fundamentals, <a
              href='https://www.elian.codes/'>routing and switching,</a
            > IP addressing,
            and network security.
          </p>
        </Card>
      </div>
    </section>
    <RecentBlogPosts />
  </main>
</Layout>
